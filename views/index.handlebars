<div class="row">
  <div class="col-12 col-lg-4 col-xl-4 mx-auto p-5">
    <h1 class="text-center">Account Login</h1>
    <form action="/login" method="post" class="d-flex flex-column align-items-center">
      <input type="text" name="email" placeholder="  Email" style="width: 50%;" class="mt-4"
        {{#if Result}}value="{{importData.email}}" {{/if}}>
      <input type="password" name="password" placeholder="  Password" style="width: 50%;" class="my-3"
        {{#if Result}}value="{{importData.password}}" {{/if}}>
      <button type="submit" class="btn btn-outline-secondary mt-4" style="width: 30%;">Sign in</button>
      {{#if Result}}
        <div class="alert alert-info mt-4" role="alert">
          <span>Username/Password 錯誤</span>
        </div>
      {{/if}}
    </form>
  </div>
</div>